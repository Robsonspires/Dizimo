@using Dizimo.Enums;
@model Dizimo.Models.UsuarioModel

@{
    ViewData["Title"] = "Criar usuário";
}

<div class="text-center">
    
    <h1 class="display-4">Cadastrar usuário</h1>

</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">

    <div class="mx-auto col-4">
        <div class="form-group mb-3">
            <label for="nome">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do usuario">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <div class="form-group mb-3">
            <label for="email">E-mail</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do usuario">
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="form-group mb-3">
            <label for="login">Login</label>
            <input type="text" asp-for="Login" class="form-control" placeholder="Digite o login do usuario">
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        
        <div class="form-group mb-3">
            <label for="comunidade" class="form-label">Comunidade</label>
            <select asp-for="ComunidadeId" class="form-select">
                <option value="0" selected>Selecione uma comunidade</option>
                @foreach (var item in Model.ListaComunidades )
                {
                    <option value="@item.Id">@item.Nome</option>
                }
            </select>
            @Html.ValidationMessageFor(x => x.ComunidadeId)
        </div>

        <div class="form-group mb-3">
            <label for="perfil" class="form-label">Perfil</label>
            <select asp-for="Perfil" class="form-select">
                <option value="0">Selecione</option>
                <option value="@PerfilEnum.Paroco">Pároco ou Administrador</option>
                <option value="@PerfilEnum.TesoureiroP">Tesoureiro Paroquial</option>
                <option value="@PerfilEnum.TesoureiroC">Tesoureiro Comunidade</option>
                <option value="@PerfilEnum.Dizimo">Coordenador Dízimo</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>
            @Html.ValidationMessageFor(x => x.Perfil)
        </div>

        <div class="form-group mb-3">
            <label for="senha">Senha</label>
            <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha do usuario">
            @Html.ValidationMessageFor(x => x.Login)
        </div>

        <div class="d-grid mb-3 gap-2">
            <button type="submit" class="btn btn-primary">Adicionar</button>
            <a class="btn mb-3 btn-secondary" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
        </div>
    </div>
</form>