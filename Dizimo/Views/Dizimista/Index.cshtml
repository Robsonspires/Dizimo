@model List<DizimistaModel>

@{
    ViewData["Title"] = "Listagem de dizimistas";
}


<div class="text-center p-3">
   
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Dizimista" asp-action="DizimistaCriar">Criar novo cadastro</a>
    </div>
    <br />

    <h1 class="display-4">Listagem de dizimistas</h1>

    <table class="table" id="table-dizimistas">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Data Nascimento</th>
                <th scope="col">Telefone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        
        <tbody>
           @if (Model != null && Model.Any())
                {
                    {
                        @foreach (DizimistaModel dizimista in Model)
                        {
                            <tr>
                            <th scope="row">@dizimista.Id</th>
                            <td>@dizimista.Nome</td>
                            <td>@dizimista.DataNascimento</td>
                            <td>@dizimista.Fone</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a role="button" class="btn btn-primary" asp-route-id="@dizimista.Id" asp-controller="Dizimista" asp-action="DizimistaEditar">Editar</a>
                                    <a role="button" class="btn btn-danger" asp-route-id="@dizimista.Id" asp-controller="Dizimista" asp-action="DizimistaApagarConfirmacao">Apagar</a>
                                </div>
                            </td>
                            </tr>
                        }
                    }
                }
                else
                {
                    <tr class="odd"><td valign="top" colspan="5">Nenhum cadastro encontrado</td></tr>
                }
        </tbody>
    </table>

</div>
